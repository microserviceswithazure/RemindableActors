    <form asp-controller="Home" asp-action="TriggerActor" method="post" class="form-horizontal" role="form">
        <h1>
            Hi, my name is <input type="text" name="name" id="name" class="text-line" />.
        </h1>
        <h2>
            I am going to find <input type="text" name="color" id="color" class="text-line" /> colored pixels in this image <input type="text" name="imagePath" id="imagePath" class="text-line" />.
